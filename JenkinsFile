pipeline {
    agent any 

    stages{
        stage('Checkout SCM') {
            steps {
                git branch: 'main', url: 'https://github.com/suraj-v86/simple-project.git'
            }
        }

        stage('Build') {
            steps {
                echo 'Building...'
            }
        }

        stage('Test') {
            steps {
                sh 'pwd' 
                sh 'ls -l'
                sh 'chmod +x hello-world.sh'
                sh './hello-world.sh'
            }
        }

        stage('Deploy') {
            steps {
                echo 'Deployment Successfull'
            }
        }
    }
}